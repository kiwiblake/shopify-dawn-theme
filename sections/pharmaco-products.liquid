{% comment %}
  Pharmaco Products Section
  Features: 2-column product cards with logos, features, CTAs, color accents
{% endcomment %}

<section class="pharmaco-products">
  <div class="pharmaco-container">
    <!-- Section Header -->
    <div class="pharmaco-products__header pharmaco-animate-fade-in-up">
      {% if section.settings.eyebrow_text %}
        <span class="pharmaco-label-small pharmaco-products__eyebrow">
          {{ section.settings.eyebrow_text }}
        </span>
      {% endif %}

      <h2 class="pharmaco-heading-section pharmaco-products__heading">
        {{ section.settings.heading }}
      </h2>

      {% if section.settings.subheading %}
        <p class="pharmaco-body-regular pharmaco-products__subheading">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>

    <!-- Product Cards -->
    <div class="pharmaco-products__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product_card' %}
            <div
              class="pharmaco-products__card pharmaco-animate-fade-in-up"
              style="animation-delay: {{ forloop.index0 | times: 150 }}ms;"
              {{ block.shopify_attributes }}
            >
              <!-- Color accent bar -->
              <div class="pharmaco-products__card-accent {{ block.settings.color_scheme }}"></div>

              <div class="pharmaco-products__card-content">
                <!-- Logo -->
                {% if block.settings.product_logo %}
                  <img
                    src="{{ block.settings.product_logo | image_url: width: 300 }}"
                    alt="{{ block.settings.product_name }}"
                    class="pharmaco-products__card-logo"
                    loading="lazy"
                  >
                {% else %}
                  <h3 class="pharmaco-products__card-name">
                    {{ block.settings.product_name }}
                  </h3>
                {% endif %}

                {% if block.settings.tagline %}
                  <span class="pharmaco-products__card-tagline {{ block.settings.tagline_color }}">
                    {{ block.settings.tagline }}
                  </span>
                {% endif %}

                <!-- Description -->
                {% if block.settings.description %}
                  <p class="pharmaco-products__card-description">
                    {{ block.settings.description }}
                  </p>
                {% endif %}

                <!-- Features -->
                {% if block.settings.feature_1 or block.settings.feature_2 or block.settings.feature_3 %}
                  <div class="pharmaco-products__card-features">
                    {% if block.settings.feature_1 %}
                      <span class="pharmaco-products__card-feature-badge {{ block.settings.feature_badge_style }}">
                        {{ block.settings.feature_1 }}
                      </span>
                    {% endif %}
                    {% if block.settings.feature_2 %}
                      <span class="pharmaco-products__card-feature-badge {{ block.settings.feature_badge_style }}">
                        {{ block.settings.feature_2 }}
                      </span>
                    {% endif %}
                    {% if block.settings.feature_3 %}
                      <span class="pharmaco-products__card-feature-badge {{ block.settings.feature_badge_style }}">
                        {{ block.settings.feature_3 }}
                      </span>
                    {% endif %}
                  </div>
                {% endif %}

                <!-- CTA -->
                {% if block.settings.button_text and block.settings.button_link %}
                  {% if block.settings.button_style == 'teal' %}
                    <a href="{{ block.settings.button_link }}" class="pharmaco-products__card-cta pharmaco-gradient-teal">
                      {{ block.settings.button_text }}
                      <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </a>
                  {% elsif block.settings.button_style == 'purple' %}
                    <a href="{{ block.settings.button_link }}" class="pharmaco-products__card-cta pharmaco-gradient-purple">
                      {{ block.settings.button_text }}
                      <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </a>
                  {% endif %}
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

