        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn About Estrogel"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "options": [
            {
