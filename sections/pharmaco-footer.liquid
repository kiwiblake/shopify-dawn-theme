{% comment %}
  Pharmaco Women's Health Footer
  Features: Purple gradient background, 4-column layout, product mandatories, legal links
{% endcomment %}

<footer class="pharmaco-footer pharmaco-gradient-footer">
  <!-- Main Footer -->
  <div class="pharmaco-container" style="padding-top: var(--spacing-4xl); padding-bottom: var(--spacing-xl);">
    <div class="pharmaco-footer__main">
      <!-- Brand Column -->
      <div class="pharmaco-footer__brand">
        <div class="pharmaco-footer__brand-logo">
          <div class="pharmaco-footer__brand-initial">
            {{ section.settings.brand_initial | default: "W" }}
          </div>
          <span class="pharmaco-footer__brand-name">
            {{ section.settings.brand_name | default: "Women's Health" }}
          </span>
        </div>
        <p class="pharmaco-footer__brand-description">
          {{ section.settings.brand_description }}
        </p>
      </div>

      <!-- Column Blocks -->
      <div class="pharmaco-footer__columns">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'footer_column' %}
              <div {{ block.shopify_attributes }}>
                <h4 class="pharmaco-footer__column-title">
                  {{ block.settings.title }}
                </h4>
                <ul class="pharmaco-footer__column-menu">
                  {% if block.settings.menu != blank %}
                    {% for link in block.settings.menu.links %}
                      <li class="pharmaco-footer__column-menu-item">
                        <a href="{{ link.url }}" class="pharmaco-footer__column-menu-link">
                          {{ link.title }}
                        </a>
                      </li>
                    {% endfor %}
                  {% endif %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>

  <!-- Product Mandatories -->
  {% if section.settings.show_mandatories %}
    <div class="pharmaco-footer__mandatories">
      <div class="pharmaco-container">
        {% if section.settings.estrogel_mandatory %}
          <p class="pharmaco-footer__mandatory">{{ section.settings.estrogel_mandatory }}</p>
        {% endif %}
        {% if section.settings.utrogestan_mandatory %}
          <p class="pharmaco-footer__mandatory">{{ section.settings.utrogestan_mandatory }}</p>
        {% endif %}
      </div>
    </div>
  {% endif %}

  <!-- Copyright -->
  <div class="pharmaco-footer__bottom">
    <div class="pharmaco-container">
      <p class="pharmaco-footer__copyright">
        © {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: shop.name }}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Pharmaco Footer",
  "settings": [
    {
      "type": "header",
      "content": "Brand Section"
    },
    {
      "type": "text",
      "id": "brand_initial",
      "label": "Brand Initial",
      "default": "W",
      "info": "Single letter for the circular icon"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "Women's Health"
    },
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Brand Description",
      "default": "Your trusted resource for menopause information and support. Navigate your journey with confidence."
    },
    {
      "type": "header",
      "content": "Product Mandatories"
    },
    {
      "type": "checkbox",
      "id": "show_mandatories",
      "label": "Show Product Mandatories",
      "default": true
    },
    {
      "type": "textarea",
      "id": "estrogel_mandatory",
      "label": "Estrogel Mandatory Text",
      "default": "Estrogel® (estradiol) is a prescription medicine used for the relief of menopausal symptoms associated with estrogen deficiency. Always read the label and use as directed. If symptoms persist, see your healthcare professional. TAPS NP23065 BES133 July 2025"
    },
    {
      "type": "textarea",
      "id": "utrogestan_mandatory",
      "label": "Utrogestan Mandatory Text",
      "default": "Utrogestan® (progesterone) is a prescription medicine used as part of menopausal hormone therapy in women with an intact uterus. Always read the label and use as directed. If symptoms persist, see your healthcare professional. TAPS NP23065 BES133 July 2025"
    },
    {
      "type": "header",
      "content": "Copyright & Legal"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Pharmaco (NZ) Ltd"
    },
    {
      "type": "url",
      "id": "privacy_link",
      "label": "Privacy Policy Link"
    },
    {
      "type": "url",
      "id": "terms_link",
      "label": "Terms of Use Link"
    }
  ],
  "blocks": [
    {
      "type": "footer_column",
      "name": "Footer Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Title",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "info": "Select a menu to display in this column"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Pharmaco Footer",
      "blocks": [
        {
          "type": "footer_column",
          "settings": {
            "title": "Information"
          }
        },
        {
          "type": "footer_column",
          "settings": {
            "title": "Our Products"
          }
        },
        {
          "type": "footer_column",
          "settings": {
            "title": "Pharmaco"
          }
        }
      ]
    }
  ]
}
{% endschema %}
