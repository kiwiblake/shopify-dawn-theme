{% comment %}
  Pharmaco Women's Health Header
  Features: Purple branding bar, sticky navigation, mobile menu
{% endcomment %}

<header
  id="pharmaco-header"
  class="pharmaco-header"
>
  <!-- Pharmaco branding bar -->
  <div class="pharmaco-header__branding pharmaco-gradient-purple">
    <div class="pharmaco-container pharmaco-header__branding-content">
      <span class="pharmaco-header__branding-text">
        {{ section.settings.branding_text }}
      </span>
      {% if section.settings.hcp_login_text and section.settings.hcp_login_link %}
        <a
          href="{{ section.settings.hcp_login_link }}"
          class="pharmaco-header__branding-link"
        >
          {{ section.settings.hcp_login_text }}
        </a>
      {% endif %}
    </div>
  </div>

  <!-- Main navigation -->
  <div
    id="main-nav"
    class="pharmaco-header__nav"
  >
    <div class="pharmaco-container">
      <nav class="pharmaco-header__nav-content">
        <!-- Logo -->
        <a href="{{ routes.root_url }}" class="pharmaco-header__logo">
          {% if section.settings.logo_color %}
            <img
              id="header-logo"
              src="{{ section.settings.logo_color | image_url: width: 200 }}"
              data-logo-white="{{ section.settings.logo_white | image_url: width: 200 }}"
              data-logo-color="{{ section.settings.logo_color | image_url: width: 200 }}"
              alt="{{ shop.name }}"
              class="pharmaco-header__logo-img"
              loading="eager"
            >
          {% else %}
            <span id="header-text-logo" class="pharmaco-header__logo-text">
              {{ shop.name }}
            </span>
          {% endif %}
        </a>

        <!-- Desktop Navigation -->
        <ul class="pharmaco-header__menu">
          {% for link in section.settings.menu.links %}
            <li>
              <a
                href="{{ link.url }}"
                class="pharmaco-header__menu-link"
              >
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>

        <!-- CTA Button -->
        <div class="pharmaco-header__cta">
          {% if section.settings.cta_text and section.settings.cta_link %}
            <a
              href="{{ section.settings.cta_link }}"
              class="pharmaco-btn pharmaco-btn-secondary"
            >
              {{ section.settings.cta_text }}
            </a>
          {% endif %}
        </div>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="pharmaco-header__mobile-toggle"
          aria-label="Toggle menu"
        >
          <svg id="menu-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
          <svg id="close-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: none;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </nav>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="pharmaco-header__mobile-menu"
  >
    <div class="pharmaco-container pharmaco-header__mobile-menu-content">
      {% for link in section.settings.menu.links %}
        <a
          href="{{ link.url }}"
          class="pharmaco-header__mobile-menu-link"
        >
          {{ link.title }}
        </a>
      {% endfor %}

      {% if section.settings.cta_text and section.settings.cta_link %}
        <a
          href="{{ section.settings.cta_link }}"
          class="pharmaco-btn pharmaco-btn-secondary pharmaco-btn-lg"
          style="display: block; text-align: center; margin-top: var(--spacing-md);"
        >
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</header>

<!-- Spacer to prevent content from hiding under fixed header -->
<div class="pharmaco-header-spacer"></div>

<script>
  // Header scroll and mobile menu functionality
  (function() {
    const mainNav = document.getElementById('main-nav');
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');
    const headerLogo = document.getElementById('header-logo');
    const headerTextLogo = document.getElementById('header-text-logo');
    const menuLinks = document.querySelectorAll('.pharmaco-header__menu-link');

    // Scroll behavior
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;

      if (currentScroll > 20) {
        mainNav.classList.add('pharmaco-header__nav--scrolled');

        // Update logo if exists
        if (headerLogo && headerLogo.dataset.logoColor) {
          headerLogo.src = headerLogo.dataset.logoColor;
        }
      } else {
        mainNav.classList.remove('pharmaco-header__nav--scrolled');

        // Update logo if exists
        if (headerLogo && headerLogo.dataset.logoWhite) {
          headerLogo.src = headerLogo.dataset.logoWhite;
        }
      }
    });

    // Mobile menu toggle
    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', () => {
        const isOpen = mobileMenu.classList.contains('pharmaco-header__mobile-menu--open');

        if (isOpen) {
          mobileMenu.classList.remove('pharmaco-header__mobile-menu--open');
          menuIcon.style.display = 'block';
          closeIcon.style.display = 'none';
        } else {
          mobileMenu.classList.add('pharmaco-header__mobile-menu--open');
          menuIcon.style.display = 'none';
          closeIcon.style.display = 'block';
        }
      });

      // Close mobile menu when clicking a link
      const mobileLinks = document.querySelectorAll('.pharmaco-header__mobile-menu-link');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.remove('pharmaco-header__mobile-menu--open');
          menuIcon.style.display = 'block';
          closeIcon.style.display = 'none';
        });
      });
    }
  })();
</script>

{% schema %}
