{% comment %}
  Pharmaco Info Cards Section
  Features: 4-column grid with icons, hover effects, links
{% endcomment %}

<section class="py-24 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-16 animate-fade-in-up">
      {% if section.settings.eyebrow_text %}
        <span class="label-small text-purple mb-3 block">
          {{ section.settings.eyebrow_text }}
        </span>
      {% endif %}

      <h2 class="heading-section text-gray-900 mb-4">
        {{ section.settings.heading }}
      </h2>

      {% if section.settings.subheading %}
        <p class="body-regular text-gray-600">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>

    <!-- Cards Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'info_card' %}
            <a
              href="{{ block.settings.link }}"
              class="group bg-white rounded-xl p-6 shadow-soft hover:shadow-medium transition-all duration-300 border border-gray-200 hover:border-purple/30 animate-fade-in-up"
              style="animation-delay: {{ forloop.index0 | times: 100 }}ms;"
              {{ block.shopify_attributes }}
            >
              <!-- Icon -->
              {% if block.settings.icon_svg %}
                <div class="w-12 h-12 rounded-lg bg-purple-light flex items-center justify-center mb-4 group-hover:bg-purple/20 transition-colors">
                  {{ block.settings.icon_svg }}
                </div>
              {% elsif block.settings.icon_image %}
                <div class="w-12 h-12 rounded-lg bg-purple-light flex items-center justify-center mb-4 group-hover:bg-purple/20 transition-colors overflow-hidden">
                  <img
                    src="{{ block.settings.icon_image | image_url: width: 48 }}"
                    alt="{{ block.settings.title }}"
                    class="w-8 h-8 object-contain"
                    loading="lazy"
                  >
                </div>
              {% else %}
                <div class="w-12 h-12 rounded-lg bg-purple-light flex items-center justify-center mb-4 group-hover:bg-purple/20 transition-colors">
                  <svg class="w-6 h-6 text-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
              {% endif %}

              <!-- Title -->
              <h3 class="font-display text-lg font-medium text-gray-900 mb-2 uppercase">
                {{ block.settings.title }}
              </h3>

              <!-- Description -->
              <p class="text-sm text-gray-600 mb-4 leading-relaxed">
                {{ block.settings.description }}
              </p>

              <!-- Link -->
              <span class="inline-flex items-center gap-1 text-sm text-purple font-medium group-hover:text-purple-dark transition-colors">
                Learn more
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </a>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

