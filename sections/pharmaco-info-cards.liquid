  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "Learn More"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Understanding Menopause"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Knowledge is power. Explore our resources to better understand menopause and how to navigate this transition."
    }
  ],
  "blocks": [
