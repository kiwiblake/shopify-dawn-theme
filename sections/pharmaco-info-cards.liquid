{% comment %}
  Pharmaco Info Cards Section
  Features: 4-column grid with icons, hover effects, links
{% endcomment %}

<section class="pharmaco-info-cards">
  <div class="pharmaco-container">
    <!-- Section Header -->
    <div class="pharmaco-info-cards__header pharmaco-animate-fade-in-up">
      {% if section.settings.eyebrow_text %}
        <span class="pharmaco-label-small pharmaco-info-cards__eyebrow">
          {{ section.settings.eyebrow_text }}
        </span>
      {% endif %}

      <h2 class="pharmaco-heading-section pharmaco-info-cards__heading">
        {{ section.settings.heading }}
      </h2>

      {% if section.settings.subheading %}
        <p class="pharmaco-body-regular pharmaco-info-cards__subheading">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>

    <!-- Cards Grid -->
    <div class="pharmaco-info-cards__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'info_card' %}
            <a
              href="{{ block.settings.link }}"
              class="pharmaco-info-cards__card pharmaco-animate-fade-in-up"
              style="animation-delay: {{ forloop.index0 | times: 100 }}ms;"
              {{ block.shopify_attributes }}
            >
              <!-- Icon -->
              {% if block.settings.icon_svg %}
                <div class="pharmaco-info-cards__card-icon">
                  {{ block.settings.icon_svg }}
                </div>
              {% elsif block.settings.icon_image %}
                <div class="pharmaco-info-cards__card-icon">
                  <img
                    src="{{ block.settings.icon_image | image_url: width: 48 }}"
                    alt="{{ block.settings.title }}"
                    width="32"
                    height="32"
                    loading="lazy"
                    style="width: 32px; height: 32px; object-fit: contain;"
                  >
                </div>
              {% else %}
                <div class="pharmaco-info-cards__card-icon">
                  <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
              {% endif %}

              <!-- Title -->
              <h3 class="pharmaco-heading-card pharmaco-info-cards__card-title">
                {{ block.settings.title }}
              </h3>

              <!-- Description -->
              <p class="pharmaco-info-cards__card-description">
                {{ block.settings.description }}
              </p>

              <!-- Link -->
              <span class="pharmaco-info-cards__card-link">
                Learn more
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </a>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .pharmaco-info-cards__card-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-size: var(--font-size-sm);
    color: var(--color-purple);
    font-weight: 500;
    transition: color var(--transition-base);
  }

  .pharmaco-info-cards__card:hover .pharmaco-info-cards__card-link {
    color: var(--color-purple-dark);
  }

  .pharmaco-info-cards__card-link svg {
    transition: transform var(--transition-base);
  }

  .pharmaco-info-cards__card:hover .pharmaco-info-cards__card-link svg {
    transform: translateX(4px);
  }
</style>

