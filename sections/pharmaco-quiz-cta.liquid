{% comment %}
  Pharmaco Quiz CTA Section
  Features: Centered CTA with gradient background
{% endcomment %}

<section class="pharmaco-quiz-cta {{ section.settings.background_style }}">
  <div class="pharmaco-container">
    <div class="pharmaco-quiz-cta__content pharmaco-animate-fade-in-up">
      {% if section.settings.eyebrow_text %}
        <span class="pharmaco-label-small pharmaco-quiz-cta__eyebrow {{ section.settings.eyebrow_color }}">
          {{ section.settings.eyebrow_text }}
        </span>
      {% endif %}

      <h2 class="pharmaco-heading-section pharmaco-quiz-cta__heading {{ section.settings.heading_color }}">
        {{ section.settings.heading }}
      </h2>

      {% if section.settings.description %}
        <p class="pharmaco-quiz-cta__description {{ section.settings.description_color }}">
          {{ section.settings.description }}
        </p>
      {% endif %}

      <div class="pharmaco-quiz-cta__buttons">
        {% if section.settings.primary_button_text and section.settings.primary_button_link %}
          {% if section.settings.primary_button_style == 'purple' %}
            <a href="{{ section.settings.primary_button_link }}" class="pharmaco-btn pharmaco-btn-primary pharmaco-btn-lg">
              {{ section.settings.primary_button_text }}
              <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          {% elsif section.settings.primary_button_style == 'teal' %}
            <a href="{{ section.settings.primary_button_link }}" class="pharmaco-btn pharmaco-btn-secondary pharmaco-btn-lg">
              {{ section.settings.primary_button_text }}
              <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          {% endif %}
        {% endif %}

        {% if section.settings.secondary_button_text and section.settings.secondary_button_link %}
          <a href="{{ section.settings.secondary_button_link }}" class="pharmaco-btn pharmaco-btn-outline pharmaco-btn-lg">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.disclaimer_text %}
        <p class="pharmaco-quiz-cta__disclaimer {{ section.settings.disclaimer_color }}">
          {{ section.settings.disclaimer_text }}
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Pharmaco Quiz CTA",
  "settings": [
    {
      "type": "header",
      "content": "Section Style"
    },
    {
      "type": "select",
      "id": "background_style",
      "label": "Background Style",
      "options": [
        {
          "value": "bg-white",
          "label": "White"
        },
        {
          "value": "bg-gray-50",
          "label": "Light Gray"
        },
        {
          "value": "bg-gradient-purple text-white",
          "label": "Purple Gradient"
        },
        {
          "value": "bg-gradient-teal text-white",
          "label": "Teal Gradient"
        },
        {
          "value": "bg-gradient-subtle",
          "label": "Subtle Gradient"
        }
      ],
      "default": "bg-gradient-subtle"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "Track Your Journey"
    },
    {
      "type": "select",
      "id": "eyebrow_color",
      "label": "Eyebrow Color",
      "options": [
        {
          "value": "text-purple",
          "label": "Purple"
        },
        {
          "value": "text-teal",
          "label": "Teal"
        },
        {
          "value": "text-white",
          "label": "White"
        }
      ],
      "default": "text-purple"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Take Control?"
    },
    {
      "type": "select",
      "id": "heading_color",
      "label": "Heading Color",
      "options": [
        {
          "value": "text-gray-900",
          "label": "Dark Gray"
        },
        {
          "value": "text-white",
          "label": "White"
        }
      ],
      "default": "text-gray-900"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Track your symptoms and share insights with your healthcare provider. Our quiz takes just 5 minutes."
    },
    {
      "type": "select",
      "id": "description_color",
      "label": "Description Color",
      "options": [
        {
          "value": "text-gray-600",
          "label": "Gray"
        },
        {
          "value": "text-white/80",
          "label": "White (80%)"
        }
      ],
      "default": "text-gray-600"
    },
    {
      "type": "header",
      "content": "Primary Button"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Button Text",
      "default": "Start the Quiz"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "primary_button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "purple",
          "label": "Purple"
        },
        {
          "value": "teal",
          "label": "Teal"
        }
      ],
      "default": "purple"
    },
    {
      "type": "header",
      "content": "Secondary Button (Optional)"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "secondary_button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "purple-outline",
          "label": "Purple Outline"
        },
        {
          "value": "white-outline",
          "label": "White Outline"
        }
      ],
      "default": "purple-outline"
    },
    {
      "type": "header",
      "content": "Disclaimer (Optional)"
    },
    {
      "type": "textarea",
      "id": "disclaimer_text",
      "label": "Disclaimer Text"
    },
    {
      "type": "select",
      "id": "disclaimer_color",
      "label": "Disclaimer Color",
      "options": [
        {
          "value": "text-gray-500",
          "label": "Gray"
        },
        {
          "value": "text-white/60",
          "label": "White (60%)"
        }
      ],
      "default": "text-gray-500"
    }
  ],
  "presets": [
    {
      "name": "Pharmaco Quiz CTA"
    }
  ]
}
{% endschema %}
