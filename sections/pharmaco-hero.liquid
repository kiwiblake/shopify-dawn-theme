{% comment %}
  Pharmaco Hero Section
  Features: Full-screen gradient background, hero image, trust indicators, floating accents
{% endcomment %}

<section class="pharmaco-hero pharmaco-gradient-hero">
  <!-- Decorative elements -->
  <div class="pharmaco-hero__decorative pharmaco-hero__decorative--circle-1"></div>
  <div class="pharmaco-hero__decorative pharmaco-hero__decorative--circle-2"></div>

  <div class="pharmaco-container">
    <div class="pharmaco-hero__grid">
      <!-- Content -->
      <div class="pharmaco-hero__content pharmaco-animate-fade-in-up">
        {% if section.settings.eyebrow_text %}
          <span class="pharmaco-label-small pharmaco-hero__eyebrow">
            {{ section.settings.eyebrow_text }}
          </span>
        {% endif %}

        <h1 class="pharmaco-heading-display pharmaco-hero__heading">
          {{ section.settings.heading | replace: '[highlight]', '<span class="pharmaco-hero__heading-highlight">' | replace: '[/highlight]', '</span>' }}
        </h1>

        {% if section.settings.subheading %}
          <p class="pharmaco-hero__subheading">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        <div class="pharmaco-hero__buttons">
          {% if section.settings.primary_button_text and section.settings.primary_button_link %}
            <a href="{{ section.settings.primary_button_link }}" class="pharmaco-btn pharmaco-btn-secondary pharmaco-btn-lg">
              {{ section.settings.primary_button_text }}
              <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          {% endif %}

          {% if section.settings.secondary_button_text and section.settings.secondary_button_link %}
            <a href="{{ section.settings.secondary_button_link }}" class="pharmaco-btn pharmaco-btn-outline pharmaco-btn-lg">
              {{ section.settings.secondary_button_text }}
            </a>
          {% endif %}
        </div>

        <!-- Trust indicators -->
        {% if section.blocks.size > 0 %}
          <div class="pharmaco-hero__trust-indicators">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'trust_indicator' %}
                  <div class="pharmaco-hero__trust-item" {{ block.shopify_attributes }}>
                    <span class="pharmaco-hero__trust-title">
                      {{ block.settings.title }}
                    </span>
                    <span class="pharmaco-hero__trust-subtitle">
                      {{ block.settings.subtitle }}
                    </span>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Hero Visual - Woman Image -->
      <div class="pharmaco-hero__visual pharmaco-animate-fade-in pharmaco-delay-200">
        <div class="pharmaco-hero__visual-inner">
          <!-- Hero Image - positioned to overflow at bottom -->
          {% if section.settings.hero_image %}
            <div class="pharmaco-hero__image-wrapper">
              <img
                src="{{ section.settings.hero_image | image_url: width: 800 }}"
                srcset="{{ section.settings.hero_image | image_url: width: 400 }} 400w,
                        {{ section.settings.hero_image | image_url: width: 600 }} 600w,
                        {{ section.settings.hero_image | image_url: width: 800 }} 800w"
                sizes="(max-width: 768px) 100vw, 50vw"
                alt="{{ section.settings.hero_image.alt | default: section.settings.heading }}"
                class="pharmaco-hero__image"
                loading="eager"
              >
            </div>
          {% endif %}

          <!-- Floating accent elements -->
          <div class="pharmaco-hero__float-accent pharmaco-hero__float-accent--1 pharmaco-animate-float"></div>
          <div class="pharmaco-hero__float-accent pharmaco-hero__float-accent--2 pharmaco-animate-float"></div>
          <div class="pharmaco-hero__float-accent pharmaco-hero__float-accent--3 pharmaco-animate-float"></div>
        </div>
      </div>
    </div>
  </div>
</section>

