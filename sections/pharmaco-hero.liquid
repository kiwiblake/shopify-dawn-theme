{% comment %}
  Pharmaco Hero Section
  Features: Full-screen gradient background, hero image, trust indicators, floating accents
{% endcomment %}

<section class="relative min-h-screen flex items-center bg-gradient-hero overflow-hidden pt-32 pb-20">
  <!-- Decorative elements -->
  <div class="absolute bottom-20 left-10 w-40 h-40 border-2 border-teal/20 rounded-full"></div>
  <div class="absolute -bottom-20 -left-20 w-80 h-80 bg-teal/10 rounded-full blur-3xl"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Content -->
      <div class="order-2 lg:order-1 animate-fade-in-up">
        {% if section.settings.eyebrow_text %}
          <span class="label-small text-teal mb-4 block">
            {{ section.settings.eyebrow_text }}
          </span>
        {% endif %}

        <h1 class="heading-display text-white mb-6 text-balance">
          {{ section.settings.heading | replace: '[highlight]', '<span class="text-teal">' | replace: '[/highlight]', '</span>' }}
        </h1>

        {% if section.settings.subheading %}
          <p class="body-large text-white/80 mb-8 max-w-xl">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        <div class="flex flex-col sm:flex-row gap-4">
          {% if section.settings.primary_button_text and section.settings.primary_button_link %}
            <a href="{{ section.settings.primary_button_link }}" class="inline-flex items-center justify-center gap-2 bg-gradient-teal text-white font-bold uppercase tracking-wide px-6 py-3 rounded-lg transition-all duration-300 hover:shadow-glow-teal group">
              {{ section.settings.primary_button_text }}
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          {% endif %}

          {% if section.settings.secondary_button_text and section.settings.secondary_button_link %}
            <a href="{{ section.settings.secondary_button_link }}" class="inline-flex items-center justify-center border-2 border-white text-white font-bold uppercase tracking-wide px-6 py-3 rounded-lg transition-all duration-300 hover:bg-white hover:text-purple">
              {{ section.settings.secondary_button_text }}
            </a>
          {% endif %}
        </div>

        <!-- Trust indicators -->
        {% if section.blocks.size > 0 %}
          <div class="mt-12 pt-8 border-t border-white/20">
            <div class="flex flex-wrap gap-8">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'trust_indicator' %}
                    <div {{ block.shopify_attributes }}>
                      <p class="text-2xl font-display font-bold text-white uppercase">
                        {{ block.settings.title }}
                      </p>
                      <p class="text-sm text-white/60">
                        {{ block.settings.subtitle }}
                      </p>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Hero Visual - Woman Image -->
      <div class="order-1 lg:order-2 relative animate-fade-in delay-200 self-end">
        <div class="relative max-w-lg mx-auto">
          <!-- Hero Image - positioned to overflow at bottom -->
          {% if section.settings.hero_image %}
            <div class="relative -mb-20">
              <img
                src="{{ section.settings.hero_image | image_url: width: 800 }}"
                srcset="{{ section.settings.hero_image | image_url: width: 400 }} 400w,
                        {{ section.settings.hero_image | image_url: width: 600 }} 600w,
                        {{ section.settings.hero_image | image_url: width: 800 }} 800w"
                sizes="(max-width: 768px) 100vw, 50vw"
                alt="{{ section.settings.hero_image.alt | default: section.settings.heading }}"
                class="w-full h-auto object-contain drop-shadow-2xl"
                loading="eager"
              >
            </div>
          {% endif %}

          <!-- Floating accent elements -->
          <div class="absolute top-10 right-0 w-4 h-4 bg-teal rounded-full animate-float delay-100"></div>
          <div class="absolute bottom-32 left-0 w-3 h-3 bg-white/40 rounded-full animate-float delay-200"></div>
          <div class="absolute top-1/3 -left-5 w-2 h-2 bg-teal/60 rounded-full animate-float delay-500"></div>
        </div>
      </div>
    </div>
  </div>
</section>

